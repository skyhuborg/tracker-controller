    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Tracker Controller",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/tracker-controller/main.go",
            "env": {
                "data-path":"${workspaceFolder}/data",
                "grpc-listen-port": "9090",
                "db-path": "${workspaceFolder}/data/tracker.db",
                "config-file": "${workspaceFolder}/data/etc/tracker.yml",
                // "video-device": "0",
                "upload-server-addr": "trackerd-dev.skyhub.org:443",
                "trackerd-server-addr": "trackerapi-dev.skyhub.org:443",
                // "profile": "1"
                "show-window": "1",
                // "disable-recorder": "1"
            },
            "args": []
        }
    ]
}
